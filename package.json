{
  "name": "pyroscope-vscode-profiler",
  "displayName": "Pyroscope Profile Viewer",
  "description": "Display inline CPU and memory profiling hints from Pyroscope in VS Code",
  "version": "1.2.0",
  "publisher": "fetchrewards",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:go",
    "onLanguage:python",
    "onLanguage:javascript",
    "onLanguage:typescript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pyroscope.loadProfile",
        "title": "Pyroscope: Load Profile from File"
      },
      {
        "command": "pyroscope.fetchFromPyroscope",
        "title": "Pyroscope: Fetch Profile from Pyroscope"
      },
      {
        "command": "pyroscope.toggleHints",
        "title": "Pyroscope: Toggle Hints"
      },
      {
        "command": "pyroscope.clearProfile",
        "title": "Pyroscope: Clear Profile"
      },
      {
        "command": "pyroscope.showDebugInfo",
        "title": "Pyroscope: Show Debug Info"
      }
    ],
    "configuration": {
      "title": "Pyroscope Profile Viewer",
      "properties": {
        "pyroscope.serverUrl": {
          "type": "string",
          "default": "http://localhost:4040",
          "description": "Pyroscope server URL"
        },
        "pyroscope.authToken": {
          "type": "string",
          "default": "",
          "description": "Optional authentication token for Pyroscope server"
        },
        "pyroscope.displayMode": {
          "type": "string",
          "enum": [
            "cpu",
            "memory",
            "both"
          ],
          "default": "both",
          "markdownDescription": "**[DEPRECATED]** Which metrics to display: CPU only, memory only, or both. Use `displayProfiles` instead for multi-profile support."
        },
        "pyroscope.displayProfiles": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "markdownDescription": "Which profile types to display in inline hints. Empty array means all loaded profiles. Example: `[\"cpu\", \"memory\"]`"
        },
        "pyroscope.colorScheme": {
          "type": "string",
          "enum": [
            "heatmap",
            "threshold",
            "minimal"
          ],
          "default": "heatmap",
          "description": "Color coding strategy for hints"
        },
        "pyroscope.threshold": {
          "type": "number",
          "default": 1,
          "minimum": 0,
          "maximum": 100,
          "description": "Minimum percentage to display hints (0-100)"
        },
        "pyroscope.pathMappings": {
          "type": "array",
          "default": [],
          "markdownDescription": "Path mappings to convert profile paths to local paths. Example: `[{\"from\": \"/app/src\", \"to\": \"${workspaceFolder}/src\"}]`",
          "items": {
            "type": "object",
            "required": [
              "from",
              "to"
            ],
            "properties": {
              "from": {
                "type": "string",
                "description": "Path prefix in profile (e.g., /app/src)"
              },
              "to": {
                "type": "string",
                "description": "Local path prefix (supports ${workspaceFolder})"
              }
            }
          }
        },
        "pyroscope.debugLogging": {
          "type": "boolean",
          "default": false,
          "description": "Enable verbose debug logging in Output panel"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "package": "vsce package --out ./dist/",
    "test": "echo \"No tests yet\" && exit 0",
    "semantic-release": "semantic-release",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.1.0",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.6",
    "@semantic-release/npm": "^11.0.2",
    "@semantic-release/release-notes-generator": "^12.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.0",
    "@types/pako": "^2.0.4",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "mocha": "^10.2.0",
    "prettier": "^3.1.1",
    "semantic-release": "^24",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "pako": "^2.1.0",
    "protobufjs": "^7.2.5"
  }
}
